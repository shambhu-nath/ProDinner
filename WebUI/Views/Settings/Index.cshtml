@model SettingsInput
<script>
    var themes = @Html.Raw(Json.Encode(Model.Themes));
    var langs = @Html.Raw(Json.Encode(Model.Langs));
    window.initSettings();
    setDogBtnTxt();
</script>
<div>
    <div class="setting"> @Html.Awe().AjaxRadioList("chTheme").Odropdown(o => o.InLabel("Theme: ")).DataFunc("utils.getItems(themes)").Value(Model.SelectedTheme) </div>
    <div class="setting"> @Html.Awe().AjaxRadioList("chLang").Odropdown(o => o.InLabel("Language: ")).DataFunc("utils.getItems(langs)").Value(Model.SelectedLang) </div>
    <div class="setting"><button type="button" id="chDog" class="awe-btn mbtn2" style="min-width: 100px;">hide dog</button></div>
</div>